{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "Dremio",
  "id": "digitalhub-dremio-datasource",
  "metrics": true,
  "info": {
    "description": "",
    "author": {
      "name": "dslab.fbk.eu"
    },
    "keywords": ["datasource"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=11.6.0",
    "plugins": []
  },
  "routes": [
    {
      "path": "token",
      "url": "{{ .JsonData.url }}",
      "body": {
        "userName": "{{ .JsonData.user }}",
        "password": "{{ .SecureJsonData.password }}"
      }
    },
    {
      "path": "api",
      "url": "{{ .JsonData.url }}"
    }
  ]
}
